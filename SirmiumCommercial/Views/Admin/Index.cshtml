@model IEnumerable<AppUser>

@{ 
    Layout = "_AdminLayout";
    ViewBag.Title = "User Accounts";
}

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>Username</th>
        <th colspan="2">Full Name</th>
        <th>Email</th>
        <th>Company Name</th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="9" class="text-center">No User Accounts</td></tr>
    }
    else
    {
        foreach (AppUser user in Model)
        {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td colspan="2">@user.FirstName @user.LastName</td>
            <td>@user.Email</td>
            <td>@user.CompanyName</td>
            <td>
                <a class="btn btn-sm btn-outline-info" asp-action="Details"
                   asp-route-id="@user.Id">Details</a>
            </td>
        </tr>
        }
    }
</table>

<a class="btn btn-success" asp-action="Create">Create</a>