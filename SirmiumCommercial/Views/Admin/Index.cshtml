@model IEnumerable<AppUser>

@{ 
    Layout = "_AdminLayout";
    ViewBag.Title = "User Accounts";
}

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>Username</th>
        <th colspan="2">Full Name</th>
        <th>Email</th>
        <th>Company Name</th>
        <th>Phone Number</th>
        <th>Registration Date</th>
        <th colspan="2" class="text-center">Status</th>
        <th>Role</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="9" class="text-center">No User Accounts</td></tr>
    }
    else
    {
        foreach (AppUser user in Model)
        {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td colspan="2">@user.FirstName @user.LastName</td>
            <td>@user.Email</td>
            <td>@user.CompanyName</td>
            <td>@user.PhoneNumber</td>
            <td>@user.RegistrationDate</td>
            <td colspan="2">
                <form asp-action="ChangeStatust" asp-route-id="@user.Id" method="post">
                    @if (user.Status == "Active")
                    {
                        <span class="text-success">@user.Status</span>
                        <button class="btn btn-sm btn-outline-danger" type="submit">
                            Inactive
                        </button>
                    }
                    else
                    {
                        <span class="text-danger">@user.Status</span>
                        <button class="btn btn-sm btn-outline-success" type="submit">
                            Active
                        </button>
                    }
                </form>
            </td>
            <td></td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-outline-success" asp-action="Edit"
                        asp-route-id="@user.Id">Edit</a>
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
        }
    }
</table>

<a class="btn btn-success" asp-action="Create">Create</a>

