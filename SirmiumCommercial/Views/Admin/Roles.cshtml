<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table table-sm table-bordered">
    <tr>
        <th>Role ID</th>
        <th>Role Name</th>
        <th>Users</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" class="text-center">No Rules</td>
        </tr>
    }
    else
    {
        foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td@>
                <td>@role.Name</td>
                <td identity-role="@role.Id"></td>
            </tr>
        }
    }
</table>