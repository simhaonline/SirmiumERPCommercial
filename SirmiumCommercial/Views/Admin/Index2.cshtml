    <div class="navbar-left m-l">
        <ul class="nav navbar-nav no-borders">
            <li>
                <h2><strong>@ViewData["Title"]</strong></h2>
            </li>
        </ul>
        <ul class="nav navbar-nav no-borders m-l-sm">
                <a href="@Url.Action("Create", "Admin",
                    new { id = ViewData["Id"] })" 
                   class="btn btn-success btn-outline m-t-sm">
                    <span class="fa fa-user-plus"></span>  New User
                </a>
        </ul>
        <ul class="nav navbar-nav no-borders">
            <li class="dropdown">
                <a class="dropdown-toggle label-menu-corner" href="#" data-toggle="dropdown">
                    <span> Sort by: </span>
                    @*ViewData["Sort"]
                    @if (ViewData["Order"].ToString() == "asc")
                    {
                        <i class="fas fa-sort-alpha-down"></i>
                    }
                    else
                    {
                        <i class="fas fa-sort-alpha-down-alt"></i>
                    }*@
                    <span class="fa fa-caret-down"></span>
                </a>
                <ul class="dropdown-menu hdropdown animated flipInX">
                    <li>
                        <a href="@Url.Action("Index", "User",
                                new
                                {
                                    userId = ViewData["Id"],
                                    sort = "Title",
                                    order = "asc",
                                    contentType = ViewData["ContentType"]
                                })">
                            <strong>Title Asc</strong>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "User",
                                new
                                {
                                    userId = ViewData["Id"],
                                    sort = "Title",
                                    order = "desc",
                                    contentType = ViewData["ContentType"]
                                })">
                            <strong>Title Desc</strong>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "User",
                                new
                                {
                                    userId = ViewData["Id"],
                                    sort = "End Date",
                                    order = "asc",
                                    contentType = ViewData["ContentType"]
                                })">
                            <strong>End Date Asc</strong>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "User",
                                new
                                {
                                    userId = ViewData["Id"],
                                    sort = "End Date",
                                    order = "desc",
                                    contentType = ViewData["ContentType"]
                                })">
                            <strong>End Date Desc</strong>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "User",
                                new
                                {
                                    userId = ViewData["Id"],
                                    sort = "Date Added",
                                    order = "asc",
                                    contentType = ViewData["ContentType"]
                                })">
                            <strong>Date Added Asc</strong>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "User",
                                new
                                {
                                    userId = ViewData["Id"],
                                    sort = "Date Added",
                                    order = "desc",
                                    contentType = ViewData["ContentType"]
                                })">
                            <strong>Date Added Desc</strong>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "User",
                                new
                                {
                                    userId = ViewData["Id"],
                                    sort = "Date Modified",
                                    order = "asc",
                                    contentType = ViewData["ContentType"]
                                })">
                            <strong>Date Modified Asc</strong>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "User",
                                new
                                {
                                    userId = ViewData["Id"],
                                    sort = "Date Modified",
                                    order = "desc",
                                    contentType = ViewData["ContentType"]
                                })">
                            <strong>Date Modified Desc</strong>
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
</div>

<table class="table table-sm table-bordered">
    <tr>
        <th>Username</th>
        <th colspan="2">Full Name</th>
        <th>Email</th>
        <th>User Status</th>
        <th>Details</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="9" class="text-center">No User Accounts</td></tr>
    }
    else
    {
        foreach (AppUser user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td colspan="2">@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                @if (user.Status == "Active")
                {
                    <td class="text-success">@user.Status</td>
                }
                else
                {
                    <td class="text-danger">@user.Status</td>
                }
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details"
                       asp-route-id="@ViewData["Id"]" asp-route-detailsId="@user.Id">
                        <span class="fa fa-info" style="font-size: 15px"></span>
                    </a>
                </td>
            </tr>
        }
    }
</table>