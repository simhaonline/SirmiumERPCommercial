@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model CreateModel
@inject SignInManager<AppUser> SignInManager

@{
    ViewData["Title"] = "Sign Up";
}

@section Styles {
    <environment names="Development,Staging,Production">
        <link rel="stylesheet" href="~/lib_local/css_local/LoginLocal.css" />
    </environment>
}


<div id="main">
    <h2 class="title-center"><strong>@ViewData["Title"]</strong></h2>
    <div class="row">
        <div class="col-md-8 input">
            <section>
                <form asp-action="SignUp" asp-route-returnurl="@ViewData["RetunUrl"]"
                      method="post" class="form-horizontal">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="userInput col-sm-10">
                            <input asp-for="UserName" placeholder="&#xf007; Username*" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10 userInput">
                            <input asp-for="Password" placeholder="&#xf084; Password* at least 6 characters" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10 userInput">
                            <input asp-for="FirstName" placeholder="&#xf007; First Name*" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10 userInput">
                            <input asp-for="LastName" placeholder="&#xf007; Last Name*" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10 userInput">
                            <input asp-for="Email" placeholder="&#xf1fa; e-mail*" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10 userInput">
                            <input asp-for="CompanyName" placeholder="&#xf275; Company Name*" class="form-control" />
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10 userInput">
                            <input asp-for="PhoneNumber" placeholder="&#xf095; Phone Number" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <p class="text-danger">
                            Fields marked with an * are required
                        </p>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-outline btn-info">Create</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}