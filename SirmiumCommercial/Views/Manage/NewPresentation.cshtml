@model NewPresentationStep1ViewModel

@{
    Layout = "_UserLayout";
    ViewData["Title"] = "New Presentation";
}
<div class="normalheader p-sm">
    <div class="hpanel">
        <div class="panel-body" style="font-size: 30px;">
            <span class="fa fa-book-open"></span>
            <strong>@ViewData["Title"]</strong>
            <span>&emsp;</span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="hpanel m-l-md m-r-md">
            <div class="panel-body">
                <div class="row text-center">
                    <button class="btn btn-primary">
                        Step 1 - Create Presentation
                    </button>
                    <button class="btn btn-default">
                        Step 2 - Record a Video
                    </button>
                    <button class="btn btn-default">
                        Step 3 - Add Files to Presentation
                    </button>
                </div>
                <form asp-action="NewPresentation" asp-controller="Manage" method="post">
                    <div asp-validation-summary="All"></div>
                    <input asp-for="CourseId" value="@Model.CourseId" hidden />
                    <input asp-for="UserId" value="@ViewData["Id"]" hidden />
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="form-group col-lg-6">
                                <label>Title:</label>
                                <input asp-for="Presentation.Title" class="form-control"
                                       placeholder="Presentation Title">
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Part:</label>
                                <input asp-for="Presentation.Part" value="@Model.PresentationPart"
                                       class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-lg-12">
                        <label>Description:</label>
                        <textarea asp-for="Presentation.Description" type="text"
                                  class="form-control" placeholder="Description...">
                                </textarea>
                    </div>

                    <div class="text-right m-t-xs">
                        <a href="@Url.Action("CourseManage", "Manage",
                                            new { id = ViewData["Id"], courseId = Model.CourseId })"
                           class="btn btn-default text-danger">Cancel</a>
                        <button type="submit" class="btn btn-default">Next</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>