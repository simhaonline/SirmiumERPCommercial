@model CompanyAdminViewModel
@{
    Layout = "_MainLayout";
    ViewBag.Title = "MyCompanyUsers";
}

<div class="row rightNav">
    @await Component.InvokeAsync("CompanyNavigation", Model.CurrentUser)
</div>

<div class="row m-1 p-1">

    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <table class="table table-sm table-bordered">
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th colspan="2">Full Name</th>
            <th>Email</th>
            <th>Company Name</th>
            <th></th>
        </tr>
        @if (Model.Users.Count() == 0)
        {
            <tr><td colspan="9" class="text-center">No User Accounts</td></tr>
        }
        else
        {
            foreach (AppUser user in Model.Users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td colspan="2">@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.CompanyName</td>
                </tr>
            }
        }
        
    </table>

    <a asp-action="Back" asp-controller="CompanyAdmin"
       asp-route-id="@Model.CurrentUser.Id" class="btn btn-outline-danger">Back</a>
</div>