@model AppUser

@{
    Layout = "_MainLayout";
    ViewBag.Title = "MyProfile";
}

<div class="col-5" style="margin:auto">

    <table class="table table-sm table-bordered">
        <tr>
            <th>ID:</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Username:</th>
            <td>@Model.UserName</td>
        </tr>
        <tr>
            <th>First Name:</th>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <th>Last Name:</th>
            <td>@Model.LastName</td>
        </tr>
        <tr>
            <th>Email:</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Company Name:</th>
            <td>@Model.CompanyName</td>
        </tr>
        <tr>
            <th>Phone Number:</th>
            <td>@Model.PhoneNumber</td>
        </tr>
        <tr>
            <th>Registration Date:</th>
            <td>@Model.RegistrationDate</td>
        </tr>
        <tr>
            <th>Status:</th>
            <td>@Model.Status</td>
        </tr>
        <tr>
            <th>Role:</th>
            <td user-role="@Model.Id"></td>
        </tr>
    </table>
    <a asp-action="Back" asp-controller="CompanyAdmin"
       asp-route-id="@Model.Id" class="btn btn-outline-danger">Back</a>
</div>
