@model Comment

<form asp-controller="Comment" asp-action="NewComment"
      asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()" method="post">
    <input asp-for="CreatedBy" hidden />
    <input asp-for="For" hidden />
    <input asp-for="ForId" hidden />
    <input asp-for="CommentId" hidden />
    <div class="m-l-lg m-r-sm m-b-sm form-inline">
        <img src="~/defaultAvatar.png" class="img-circle m-b-sm"
             style="width: 8%; height: 8%" />
        <textarea class="form-control" placeholder="Add a comment..."
                  id="comment" asp-for="Content"
                  cols="130" rows="4" onchange="CommentBtn.enable()"></textarea>
        <button type="submit" class="btn btn-primary m-b-sm m-l-sm"
                id="commentBtn" style="display: none">
            <span class="fa fa-paper-plane"></span>
        </button>
    </div>
</form>
