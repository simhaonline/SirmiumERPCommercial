<div class="color-line">
</div>
<div id="logo" class="light-version">
    <a href="@Url.Action("Index", "User", new { id = ViewData["Id"] })">
        <strong>SirmiumERPCommercial</strong>
    </a>
</div>
<nav role="navigation">
    <div class="header-link hide-menu"><i class="fa fa-bars"></i></div>
    <div class="small-logo">
        <a href="@Url.Action("Index", "User", new { id = ViewData["Id"] })">
            <span class="text-primary">SirmiumERPCommercial</span>
        </a>
    </div>
    <form role="search" class="navbar-form-custom" asp-action="Search" asp-controller="Search"
          asp-route-id="@ViewData["Id"].ToString()" method="post">
        <div class="form-group">
            <input type="text" placeholder="&#xF002; Search" class="form-control" name="KeyWord" style="font-family:Arial, FontAwesome">
        </div>
    </form>
    <div class="mobile-menu">
        <button type="button" class="navbar-toggle mobile-menu-toggle" data-toggle="collapse" data-target="#mobile-collapse">
            <i class="fa fa-chevron-down"></i>
        </button>
        <div class="collapse mobile-navbar" id="mobile-collapse">
            <ul class="nav navbar-nav">
                <li>
                    <a class="" href="@Url.Action("MyProfile", "User")">My Profile</a>
                </li>
                <li>
                    <a class="" href="@Url.Action("Account", "Logout")">Logout</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="navbar-right">
        <ul class="nav navbar-nav no-borders">
            <li class="dropdown">
                @await Component.InvokeAsync("Notification", new { userId = ViewData["Id"] })
            </li>
            <li class="dropdown">
                <a class="dropdown-toggle" href="#" data-toggle="dropdown">
                    <i class="pe-7s-keypad"></i>
                </a>
                <div class="dropdown-menu hdropdown bigmenu animated flipInX">
                    <table>
                        <tbody>
                            <tr>
                                <td>
                                    <a>
                                        <i class="pe pe-7s-cloud-upload text-info"></i>
                                        <span class="label label-info">0</span>
                                        <h5>Practices</h5>
                                    </a>
                                </td>
                                <td>
                                    <a>
                                        <i class="pe pe-7s-glasses text-warning"></i>
                                        <span class="label label-warning">0</span>
                                        <h5>Views</h5>
                                    </a>
                                </td>
                                <td>
                                    <a>
                                        <i class="pe pe-7s-paperclip text-success"></i>
                                        <span class="label label-success">0</span>
                                        <h5>Submissions</h5>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <a>
                                        <i class="pe pe-7s-graph1 text-warning"></i>
                                        <h5>My Progress</h5>
                                    </a>
                                </td>
                                <td>
                                    <a>
                                        <i class="pe pe-7s-cup text-danger"></i>
                                        <span class="label label-danger">0</span>
                                        <h5>Awards</h5>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </li>
            <li class="dropdown">
                @await Component.InvokeAsync("HeaderChat", new { userId = ViewData["Id"] })
            </li>
            <li>
                <a id="sidebar" class="right-sidebar-toggle">
                    <i class="pe-7s-user"></i>
                </a>
            </li>
            <li class="dropdown">
                <a href="@Url.Action("Logout", "Account")">
                    <i class="pe-7s-download pe-rotate-90 text-info"></i>
                </a>
            </li>
        </ul>
    </div>
</nav>


@section Scripts {
    <environment names="Development,Staging,Production">
    </environment>

    
}
